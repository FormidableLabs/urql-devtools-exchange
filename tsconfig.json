{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES6",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
